{
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "module": "commonjs",
        "target": "es2022",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules/"
    ],
    "ts-node": {
        "esm": true,
    }
}