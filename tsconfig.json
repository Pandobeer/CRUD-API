{
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "target": "es2022",
        "outDir": "./dist/",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true
    }
}