{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noEmitOnError": false,
        "module": "Node16", // or "NodeNext"
        "target": "ESNext",
        "moduleResolution": "Node16", // or "NodeNext"
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "webpack",
        "jest"
    ]
}